@model AplicacionTiendita.Models.T_Categoria

@{
    ViewBag.Title = "Editar Categoría";
}

<h2 class="text-center text-primary mb-4">Editar Categoría</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-secondary">T_Categoria</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codcat)

        <div class="form-group row">
            @Html.LabelFor(model => model.nomcat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomcat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nomcat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.estcat, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="form-check">
                    @Html.EditorFor(model => model.estcat, new { htmlAttributes = new { @class = "form-check-input" } })
                    @Html.LabelFor(model => model.estcat, htmlAttributes: new { @class = "form-check-label" })
                    @Html.ValidationMessageFor(model => model.estcat, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
