@model AplicacionTiendita.Models.T_Categoria

@{
    ViewBag.Title = "Detalles de la Categoría";
}

<h2 class="text-center text-primary mb-4">Detalles de la Categoría</h2>

<div class="card">
    <div class="card-header bg-secondary text-white">
        <h4 class="card-title">T_Categoria</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.nomcat)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.nomcat)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.estcat)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.estcat)
            </dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.codcat }, new { @class = "btn btn-warning mr-2" })
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</div>
